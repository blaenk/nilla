{
  "env": {
    "browser": true
  },
  "globals": {
    "__NODE_ENV__": true,
    "module": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "plugin:react/recommended"
  ],
  "rules": {
    "react/no-deprecated": ["error"],
    "react/no-did-mount-set-state": ["error"],
    "react/no-is-mounted": ["error"],
    "react/no-multi-comp": ["error"],
    "react/no-did-update-set-state": ["error"]
  }
}
