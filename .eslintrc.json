{
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-var": ["error"],
    "strict": ["error", "global"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error"],
    "require-jsdoc": ["error"],
    "valid-jsdoc": ["error"],
    "curly": ["error"]
  }
}
